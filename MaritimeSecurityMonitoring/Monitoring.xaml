<Page x:Class="MaritimeSecurityMonitoring.MainInterfacePage.Monitoring"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:wfi ="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration" 
      xmlns:wf ="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"   
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ym="clr-namespace:YimaWF;assembly=YimaWF"
      mc:Ignorable="d" 
      d:DesignWidth="1097.345" d:DesignHeight="608"
	Title="Monitoring" Loaded="Page_Loaded"  ShowsNavigationUI="False" KeepAlive="True">
    <Page.Resources>
        <Style x:Key="contentCenterStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>
    
    <Grid Width="Auto" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.13*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Name="buju">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>
            <MediaElement Grid.Row="1" Grid.Column="1" Source="Video\0_1.mp4" LoadedBehavior="Play" Stretch="Fill" Name="video2"/>
            <MediaElement Grid.Row="2" Grid.Column="1" Source="Video\0_2.mp4" LoadedBehavior="Play" Stretch="Fill" Name="video3"/>
            <wfi:WindowsFormsHost Grid.Row="0" Grid.Column="1">
			    <!--视频播放控件嵌入-->
                <wf:PictureBox x:Name="infraredRayPictureBox" Margin="0,0,0,0"></wf:PictureBox>
            </wfi:WindowsFormsHost>
            <wfi:WindowsFormsHost Grid.Row="1" Grid.Column="1">
                <!--视频播放控件嵌入-->
                <wf:PictureBox x:Name="followingPictureBox" Margin="0,0,0,0"></wf:PictureBox>
            </wfi:WindowsFormsHost>
            <wfi:WindowsFormsHost Grid.Row="2" Grid.Column="1">
                <!--视频播放控件嵌入-->
                <wf:PictureBox x:Name="telephotoPictureBox" Margin="0,0,0,0"></wf:PictureBox>
            </wfi:WindowsFormsHost>
			
            <WindowsFormsHost Grid.RowSpan="3" x:Name="formshost">
                <ym:YimaEncCtrl x:Name="yimaEncCtrl"/>
            </WindowsFormsHost>
			
            <ListBox Grid.Row="0" Grid.RowSpan="3" Margin="80" Width="200" Foreground="White" FontSize="15" Height="150" BorderBrush="#FF323441" BorderThickness="3" Background="CornflowerBlue" VerticalAlignment="Top" Opacity = "0.8" HorizontalAlignment="Left" Visibility="Collapsed"  Name="targetBoxInformation"></ListBox >
            <Button Grid.Row="0" Grid.RowSpan="3" Margin="220,190,80,80" Width="50" Foreground="White" FontSize="15" Height="30"   BorderThickness="2" Background="#84C1FF" VerticalAlignment="Top" HorizontalAlignment="Left" Name="moreInformationButton" Opacity="0.8" Visibility="Collapsed" Click="getMoreInformationClick">详情</Button>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.27*"/>
                <ColumnDefinition Width="2.6*"/>
                <ColumnDefinition Width="2.0*"/>
                <ColumnDefinition Width="1.27*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0" FontSize="15" Foreground="White" Background="SteelBlue"  Click="allTargetClick" >所有目标
            </Button>

            <Button Grid.Row="1" Grid.Column="0" FontSize="15" Foreground="White" Background="SteelBlue"  Click="AISTargetClick" >AIS目标
            </Button>

            <Button Grid.Row="2" Grid.Column="0" FontSize="15" Foreground="White" Background="SteelBlue"  Click="radarTargetClick">雷达目标
            </Button>

            <Button Grid.Row="3" Grid.Column="0" FontSize="15" Foreground="White" Background="SteelBlue"  Click="mixTargetClick">融合目标
            </Button>

            <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="4">

                <DataGrid Name="AISDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Background="#C4E1FF" HorizontalGridLinesBrush="#FFAFAFAF" VerticalGridLinesBrush="#FFAFAFAF" IsReadOnly="True" RowBackground="#FFC4E1FF" SelectionChanged="DataGrid1_SelectionChanged_1">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#C4E1FF"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="MMSI" Width="100" Binding="{Binding MMSI}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="IMO" Width="100" Binding="{Binding IMO}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="经度" Width="100" Binding="{Binding longitude}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="纬度" Width="100" Binding="{Binding latitude}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="距离" Width="100" Binding="{Binding distance}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="航速" Width="100" Binding="{Binding speed}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="方向" Width="100" Binding="{Binding steeringAngle}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="船名" Width="100" Binding="{Binding boatName}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="呼号" Width="100" Binding="{Binding callSign}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="船货类型" Width="100" Binding="{Binding cargoType}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="航行状况" Width="100" Binding="{Binding sailingStatus}" ElementStyle="{StaticResource contentCenterStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid Name="radarDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Background="#C4E1FF" HorizontalGridLinesBrush="#FFAFAFAF" VerticalGridLinesBrush="#FFAFAFAF" IsReadOnly="True" RowBackground="#FFC4E1FF" SelectionChanged="DataGrid1_SelectionChanged_1">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#C4E1FF"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="批号" Width="133" Binding="{Binding batchNumber}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="经度" Width="133" Binding="{Binding longitude}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="纬度" Width="133" Binding="{Binding latitude}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="距离" Width="133" Binding="{Binding distance}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="航速" Width="133" Binding="{Binding speed}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="方向" Width="133" Binding="{Binding steeringAngle}" ElementStyle="{StaticResource contentCenterStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid Name="mixDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Background="#C4E1FF" HorizontalGridLinesBrush="#FFAFAFAF" VerticalGridLinesBrush="#FFAFAFAF" IsReadOnly="True" RowBackground="#FFC4E1FF" SelectionChanged="DataGrid1_SelectionChanged_1">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#C4E1FF"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="融合批号" Width="100" Binding="{Binding mixBatchNumber}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="MMSI" Width="100" Binding="{Binding MMSI}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="IMO" Width="100" Binding="{Binding IMO}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="经度" Width="100" Binding="{Binding longitude}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="纬度" Width="100" Binding="{Binding latitude}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="距离" Width="100" Binding="{Binding distance}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="航速" Width="100" Binding="{Binding speed}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="方向" Width="100" Binding="{Binding steeringAngle}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="船名" Width="100" Binding="{Binding boatName}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="呼号" Width="100" Binding="{Binding callSign}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="船货类型" Width="100" Binding="{Binding cargoType}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="航行状况" Width="100" Binding="{Binding sailingStatus}" ElementStyle="{StaticResource contentCenterStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid Name="allDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Background="#C4E1FF" HorizontalGridLinesBrush="#FFAFAFAF" VerticalGridLinesBrush="#FFAFAFAF" IsReadOnly="True" RowBackground="#FFC4E1FF" SelectionChanged="DataGrid1_SelectionChanged_1">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#C4E1FF"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="来源" Width="100" Binding="{Binding dataType}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="批号" Width="100" Binding="{Binding batchNumber}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="MMSI" Width="100" Binding="{Binding MMSI}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="IMO" Width="100" Binding="{Binding IMO}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="经度" Width="100" Binding="{Binding longitude}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="纬度" Width="100" Binding="{Binding latitude}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="距离" Width="100" Binding="{Binding distance}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="航速" Width="100" Binding="{Binding speed}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="方向" Width="100" Binding="{Binding steeringAngle}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="船名" Width="100" Binding="{Binding boatName}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="呼号" Width="100" Binding="{Binding callSign}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="船货类型" Width="100" Binding="{Binding cargoType}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="航行状况" Width="100" Binding="{Binding sailingStatus}" ElementStyle="{StaticResource contentCenterStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Grid.RowSpan="1" Name="allCheck" Background="SteelBlue" Click="allCheck_Click">
                        <Grid Height="50">
                            <Label FontSize="15" Foreground="White" VerticalContentAlignment="Top">全</Label>
                            <Label FontSize="15" Foreground="White" VerticalContentAlignment="Bottom">选</Label>
                        </Grid>
                    </Button>
                    <Button Grid.Row="1" Grid.RowSpan="1" Name="oppCheck" Background="SteelBlue" Click="oppCheck_Click">
                        <Grid Height="50">
                            <Label FontSize="15" Foreground="White" VerticalContentAlignment="Top">反</Label>
                            <Label FontSize="15" Foreground="White" VerticalContentAlignment="Bottom">选</Label>
                        </Grid>
                    </Button>
                    <Button Grid.Row="2" Grid.RowSpan="1" Name="delWarn" Background="SteelBlue" Click="delWarn_Click">
                        <Grid Height="50">
                            <Label FontSize="15" Foreground="White" VerticalContentAlignment="Top">删</Label>
                            <Label FontSize="15" Foreground="White" VerticalContentAlignment="Bottom">除</Label>
                        </Grid>
                    </Button>
                </Grid>

                <DataGrid Grid.Column="1" Grid.ColumnSpan="2" Name="warnDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Background="#C4E1FF" HorizontalGridLinesBrush="#FFAFAFAF" VerticalGridLinesBrush="#FFAFAFAF" IsReadOnly="True" RowBackground="#C4E1FF" Foreground="Red" SelectionChanged="DataGrid2_SelectionChanged" BorderBrush="#FF688CAF">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#C4E1FF"/>
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding Path=isConfirmed}" Value="true">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="选择" Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding isCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsThreeState="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="报警时间" Width="100" Binding="{Binding alarmTime}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="MMSI" Width="100" Binding="{Binding MMSI}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="报警类型" Width="100" Binding="{Binding alarmType}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTextColumn Header="内容" Width="230" Binding="{Binding alarmContent}" ElementStyle="{StaticResource contentCenterStyle}"/>
                        <DataGridTemplateColumn Header="确认" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="确认" Width="40" Height="20" Background="AliceBlue" Click="isConfirmed_Click" CommandParameter="{Binding Path=mixBatchNumber}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            <Border Grid.Row="0" Grid.Column="3" Grid.RowSpan="4" Background="#C4E1FF" ></Border>
            <Grid Grid.Row="0" Grid.Column="3" Grid.RowSpan="4" Background="#C4E1FF" Margin="3,3,3,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Height="40" Width="60" HorizontalAlignment="Center" FontSize="15" Background="#1e8ab7" Foreground="White" BorderBrush="LightSteelBlue" BorderThickness="1"  VerticalAlignment="Center" Click="telephotoClick">长焦</Button>
                <Button Grid.Row="1" Grid.Column="0" Height="40" Width="60" HorizontalAlignment="Center" FontSize="15" Background="#1e8ab7" Foreground="White" BorderBrush="LightSteelBlue" BorderThickness="1"  VerticalAlignment="Center" Click="infraredRayClick">红外</Button>
                <Button Grid.Row="2" Grid.Column="0" Height="40" Width="60" HorizontalAlignment="Center" FontSize="15" Background="#1e8ab7" Foreground="White" BorderBrush="LightSteelBlue" BorderThickness="1"  VerticalAlignment="Center" Click="SiFuClick">饲服</Button>
                <Button Grid.Row="3" Grid.Column="0" Height="40" Width="60" HorizontalAlignment="Center" FontSize="15" Background="#1e8ab7" Foreground="White" BorderBrush="LightSteelBlue" BorderThickness="1"  VerticalAlignment="Center" Click="limitSpaceClick">限位</Button>
                <Button Grid.Row="4" Grid.Column="0" Height="40" Width="60" HorizontalAlignment="Center" FontSize="15" Background="#1e8ab7" Foreground="White" BorderBrush="LightSteelBlue" BorderThickness="1"  VerticalAlignment="Center" Click="scanClick">扫描</Button>
                <!--长焦start-->
                <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" Name="changjiao" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">昼光摄像机</TextBox>
                    <WrapPanel Grid.Row="1">
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True" >焦距：</TextBox>
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True" x:Name="focalLength">0.0</TextBox>
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">mm</TextBox>
                        <Button  HorizontalAlignment="Center" Width="50" FontSize="13" Background="SteelBlue" Foreground="white" BorderBrush="LightSteelBlue" BorderThickness="1" VerticalAlignment="Center" Margin="6,0,0,0"  Click="focusDownClick" Name="focusButtonDecControl">聚焦 -</Button>
                        <Button  HorizontalAlignment="Center" Width="50" FontSize="13" Background="SteelBlue" Foreground="white" BorderBrush="LightSteelBlue" BorderThickness="1" VerticalAlignment="Center"  Margin="10,0,0,0" Click="focusUpClick" Name="focusButtonAddControl">聚焦 +</Button>
                    </WrapPanel>
                    <WrapPanel Grid.Row="2">
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">视图：</TextBox>
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">0.0</TextBox>
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">*</TextBox>
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">0.0</TextBox>
                        <Button  HorizontalAlignment="Center" Width="50" FontSize="13" Background="SteelBlue" Foreground="white" BorderBrush="LightSteelBlue" BorderThickness="1" VerticalAlignment="Center" Click="focusDownMoreClick" Name="focusDownMoreControl">变焦 -</Button>
                        <Button  HorizontalAlignment="Center" Width="50" FontSize="13" Background="SteelBlue" Foreground="white" BorderBrush="LightSteelBlue" BorderThickness="1" VerticalAlignment="Center"  Margin="10,0,0,0" Click="focusUpMoreClick" Name="focusUpMoreControl">变焦 +</Button>
                    </WrapPanel>
                    <TextBox Grid.Row="3" FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">驱动漂移补偿</TextBox>
                    <WrapPanel Grid.Row="4">
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">方位</TextBox>
                        <TextBox Width="30px" FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="1" Name="directionVlu">0</TextBox>
                        <Grid Width="8px" Height="16px">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0" HorizontalAlignment="Center"  Background="#C4E1FF" BorderBrush="LightSteelBlue" BorderThickness="1" VerticalAlignment="Center" Click="directionUpClick">+</Button>
                            <Button Grid.Row="1" HorizontalAlignment="Center"  Background="#C4E1FF" BorderBrush="LightSteelBlue" BorderThickness="1" VerticalAlignment="Center" Click="directionDownClick">-</Button>
                        </Grid>
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">俯仰</TextBox>
                        <TextBox Width="30px" FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="1" Name="pitchVlu">0</TextBox>
                        <Grid Width="8px" Height="16px">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0"  Background="#C4E1FF" BorderBrush="LightSteelBlue" BorderThickness="1"  Click="pitchUpClick">+</Button>
                            <Button Grid.Row="1"  Background="#C4E1FF" BorderBrush="LightSteelBlue" BorderThickness="1"  Click="pitchDownClick">-</Button>
                        </Grid>
                    </WrapPanel>
                </Grid>
                <!--长焦end-->
                <!--红外start-->
                <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" Name="hongwai" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="0">
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">红外控制</TextBox>
                        <RadioButton  FontSize="13" Click="optimalClick1_open" Name="RadioB1_open" IsChecked="True">开</RadioButton>
                        <RadioButton  FontSize="13" Click="optimalClick2_close" Name="RadioB2_close">关</RadioButton>
                    </WrapPanel>
                    <WrapPanel Grid.Row="1">
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">图像极性</TextBox>
                        <RadioButton  FontSize="13" Click="optimalClick1" Name="RadioB1" IsChecked="True">黑热</RadioButton>
                        <RadioButton  FontSize="13" Click="optimalClick2" Name="RadioB2">白热</RadioButton>
                    </WrapPanel>
                    <WrapPanel Grid.Row="2">
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">图像矫正</TextBox>
                        <RadioButton  FontSize="13" Click="optimalClick3" Name="RadioB3" IsChecked="True">对空矫正</RadioButton>
                        <RadioButton  FontSize="13" Click="optimalClick4" Name="RadioB4">挡板矫正</RadioButton>
                    </WrapPanel>
                    <WrapPanel Grid.Row="3">
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">坏元维护</TextBox>
                        <RadioButton  FontSize="13" Click="optimalClick5" Name="RadioB5" IsChecked="True">搜索坏元</RadioButton>
                        <RadioButton  FontSize="13" Click="optimalClick6" Name="RadioB6">存储信息</RadioButton>
                    </WrapPanel>
                    <TextBox Grid.Row="4" FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">红外摄像机</TextBox>
                    <WrapPanel Grid.Row="5">
                        <TextBox FontSize="13" HorizontalContentAlignment="left" VerticalContentAlignment="Center" Background="#C4E1FF" BorderThickness="0" IsReadOnly="True">焦距：</TextBox>
